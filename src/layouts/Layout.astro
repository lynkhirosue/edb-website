---
import '../styles/global.css';

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "L'École du Bélier - Femto-brasserie artisanale", 
  description = "Découvrez nos bières artisanales brassées avec passion. Créations uniques et savoir-faire traditionnel." 
} = Astro.props;

const siteUrl = Astro.url.origin;
---

<html lang="fr" class="scroll-smooth">
  <head>
    <!-- OBLIGATOIRE : charset EN PREMIER -->
    <meta charset="UTF-8" />
    
    <!-- Script pour le thème (doit être en inline) -->
    <script is:inline>
      const stored = localStorage.getItem('theme');
      if (stored === 'dark' || (!stored && matchMedia('(prefers-color-scheme:dark)').matches)) {
        document.documentElement.classList.add('dark');
      }
    </script>
    
    <!-- Viewport -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Titre et description -->
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Open Graph (iMessage, WhatsApp, LinkedIn, Signal, etc.) -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="L'École du Bélier" />
    <meta property="og:locale" content="fr_FR" />
    <meta property="og:image" content={`${siteUrl}/og-image.jpg`} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    
    <!-- Slot pour les meta tags spécifiques aux pages -->
    <slot name="head" />
  </head>
  
  <body class="bg-amber-50 dark:bg-slate-900 text-slate-800 dark:text-slate-100">
    <!-- Header avec bouton thème -->
    <header class="flex items-center justify-between p-4 max-w-5xl mx-auto">
      <h1 class="text-2xl font-serif">L'École du Bélier</h1>
    </header>

    <!-- Contenu principal -->
    <main class="max-w-5xl mx-auto p-4">
      <slot />
    </main>
  </body>
</html>
