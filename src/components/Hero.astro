---
import '../styles/hero.css';
import { initParallax } from './Hero.client.js';
---
<section id="hero" class="hero-section">
  <div class="hero-overlay">
    <h1>L’École du Bélier</h1>
    <p>Micro-brasserie maison en Nouvelle-Aquitaine<br>Production &lt; 100 L/mois</p>
    <a href="#beers" class="hero-cta">Découvrir nos bières</a>
  </div>
  <img src="/hero-bg.jpg" alt="Photo de brasserie artisanale" class="hero-bg" />
  <button id="scroll-down" class="scroll-down" aria-label="Descendre">↓</button>
</section>

<!-- Exécute le parallax uniquement côté client -->
<script type="module">
  import { initParallax } from './Hero.client.js';
  initParallax();
</script>
